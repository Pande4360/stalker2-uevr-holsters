{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Lua File",
            "type": "shell",
            "command": "lua",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true,
                "close": false
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}